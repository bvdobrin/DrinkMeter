<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView android:id="@+id/logo_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingTop="60dp"
        android:paddingBottom="30dp"
        android:src="@drawable/drinkmeter_logo_no_bg"
        android:layout_centerHorizontal="true"/>

    <Button android:id="@+id/add_drink_second_activity"
        android:layout_width="146dp"
        android:layout_height="50dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/logo_image"
        android:layout_centerHorizontal="true"
        android:text="ADD A DRINK"/>

    <ImageView android:id="@+id/add_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:paddingTop="12dp"
        android:layout_below="@id/logo_image"
        android:src="@drawable/add"
        android:layout_toRightOf="@id/add_drink_second_activity"/>

    <Button android:id="@+id/see_stats_third_activity"
        android:layout_width="146dp"
        android:layout_height="50dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/add_drink_second_activity"
        android:layout_centerHorizontal="true"
        android:text="@string/stats_button_text"/>

    <ImageView android:id="@+id/drunk_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:paddingTop="12dp"
        android:layout_below="@id/add_drink_second_activity"
        android:src="@drawable/drunk"
        android:layout_toRightOf="@id/see_stats_third_activity"/>

    <Button android:id="@+id/settings_fourth_activity"
        android:layout_width="146dp"
        android:layout_height="50dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/see_stats_third_activity"
        android:layout_centerHorizontal="true"
        android:text="@string/settings_button_text"/>

    <ImageView android:id="@+id/settings_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:paddingTop="12dp"
        android:layout_below="@id/see_stats_third_activity"
        android:src="@drawable/settings"
        android:layout_toRightOf="@id/settings_fourth_activity"/>

</RelativeLayout>