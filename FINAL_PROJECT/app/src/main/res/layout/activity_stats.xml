<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/stats_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/centerShim_stats"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/bac_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        android:text="Blood Alcohol Content (BAC):"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout android:id="@+id/behavior_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/centerShim_stats">
    </RelativeLayout>

    <RelativeLayout android:id="@+id/impairment_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/centerShim_stats">
    </RelativeLayout>
</RelativeLayout>